generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id            String         @id @default(uuid())
  userId        String
  name          String
  note          String
  targetInCents Int
  imagePath     String
  description   String
  dueAt         DateTime
  categoryId    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  goalTransfers GoalTransfer[]
  category      GoalCategory   @relation(fields: [categoryId], references: [id], onDelete: Restrict)
}

model GoalCategory {
  id           String         @id @default(uuid())
  name         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Goal         Goal[]
  GoalTransfer GoalTransfer[]
}

model GoalTransfer {
  id            String @id @default(uuid())
  link          String
  note          String
  itemName      String
  imagePath     String
  merchantName  String
  amountInCents Int
  rating        Int

  transactedAt DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  categoryId String
  userId     String
  goalId     String
  category   GoalCategory @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  goal       Goal         @relation(fields: [goalId], references: [id], onDelete: Restrict)
}
