generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id            String         @id @default(uuid())
  userId        String
  name          String
  note          String
  targetAmount  Decimal        @db.Decimal(65, 2)
  imagePath     String
  description   String?
  dueAt         DateTime
  categoryId    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  goalTransfers GoalTransfer[]
  category      GoalCategory   @relation(fields: [categoryId], references: [id], onDelete: Restrict)
}

model GoalCategory {
  id           String         @id @default(uuid())
  name         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Goal         Goal[]
  GoalTransfer GoalTransfer[]
}

model UserPin {
  id        String   @id @default(uuid())
  userId    String
  typeId    String   @unique
  type      String
  createdAt DateTime @default(now())
}

model GoalTransfer {
  id       String  @id @default(uuid())
  userId   String
  itemName String
  amount   Decimal @db.Decimal(65, 2)

  transactedAt DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  link         String?
  note         String?
  imagePath    String?
  merchantName String?
  rating       Int?

  categoryId String?
  goalId     String?
  category   GoalCategory? @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  goal       Goal?         @relation(fields: [goalId], references: [id], onDelete: Restrict)
}
