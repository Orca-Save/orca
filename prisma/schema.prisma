generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id             String       @id @default(uuid())
  userId         String
  name           String
  note           String
  balanceInCents Int          @default(0)
  targetInCents  Int
  imagePath      String
  description    String
  dueAt          DateTime
  categoryId     String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  savings        Saving[]
  category       GoalCategory @relation(fields: [categoryId], references: [id], onDelete: Restrict)
}

model GoalCategory {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Goal      Goal[]
}

model Saving {
  id               String   @id @default(uuid())
  pricePaidInCents Int
  link             String
  merchantName     String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  categoryId       String

  userId String
  goalId String
  goal   Goal   @relation(fields: [goalId], references: [id], onDelete: Restrict)
}
